pcm.!default
{
    type asym
    playback.pcm
    {
        type plug
        slave.pcm "dmix"
    }
    capture.pcm
    {
        type plug
        slave.pcm "hw:2,0"
    }
}

pcm.skype_control {
    type softvol
    slave {
        pcm "dmix"
    }
    control {
        name "Skype"
        card 0
    }
}
pcm.skype {
    type plug
    slave.pcm "skype_control"
}
