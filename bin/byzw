#!/bin/bash

function getProp()
{
    echo $(echo "$info" | grep -oe "$1.*:  \?[0-9]\+" | grep -oe '[0-9]\+')
}

info=$(xwininfo)
B=$(getProp 'Border width')
W=$(getProp Width)
H=$(getProp Height)
X=$[$(getProp 'Relative upper-left X') + B]
Y=$[$(getProp 'Relative upper-left Y') + B]

byz -x $X -y $Y -w $W -h $H --delay 1 $@

