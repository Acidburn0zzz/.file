style "ahoka-scrollbar"
{
  fg[NORMAL]   = "#222222"
  bg[SELECTED] = "#262626"
	engine "murrine"
	{
        glazestyle      = 0
        roundness       = 0
        scrollbarstyle	= 2   # 2 adds handles to scrollbars.
        stepperstyle		= 1   # 0 = standard, 1 = integrated stepper handles.
        contrast        = 1.15

        trough_shades       = { 0.85, 0.85 }
        gradient_colors     = FALSE
	}
}

## Thunar
style "thunarentry"
{
    base[NORMAL] = "#262626"
    xthickness = 0
    ythickness = 0
}
style "thunarbutton"
{
    fg[PRELIGHT] = "#753030"
    fg[ACTIVE]   = "#753030"

    engine "pixmap"
    {
        image
        {
            function = BOX
            recolorable = TRUE
            file = ""
            border = { 0, 0, 0, 0 }
            stretch = TRUE
        }
    }
}

