style "ahoka-default"
{
	GtkScrolledWindow::scrollbars-within-bevel    = 1
	GtkScrolledWindow::scrollbar-spacing          = 0
	GtkRange::trough_border                       = 0
	GtkRange::slider_width                        = 8
	GtkRange::stepper_size                        = 0
	GtkRange::trough_border                       = 0
	GtkPaned::handle_size                         = 6
	GtkScrollbar::has-backward-stepper            = 1
	GtkScrollbar::has-forward-stepper             = 1

    GtkScale :: activate-slider = 1
    GtkScale :: slider-length = 23
    GtkScale :: slider-width = 14
    GtkScale :: trough-side-details = 1

    GtkRange::trough_border = 0
    GtkRange::trough_border = 0
    GtkRange::slider_width = 10
    GtkRange::stepper_size = 1
    GtkScrollbar::min_slider_length = 40

    xthickness = 1
    ythickness = 1

	fg[NORMAL]	      	= "#cccaca" # Metacity and mouseover, Most text
	fg[PRELIGHT]      	= "#dddada" # Text when mouseover
	fg[ACTIVE]	    	  = "#dddada" # Text when mouseclicking button, Tabs, Active window list
	fg[SELECTED]      	= "#ffffff" # Metacity X when window selected
	fg[INSENSITIVE]   	= "#303030" # Insensitive Text

	bg[NORMAL]	     	  = "#262626" # Normal Background, inactive Metacity bar, buttons
	bg[PRELIGHT]	  	  = "#753030" # Mouseover buttons
	bg[ACTIVE]	  	    = "#222222" # Mouseclicking, Tabs, active window list
	bg[SELECTED]	      = "#753030" # Metacity Bar
	bg[INSENSITIVE]   	= "#181818" # Insensitive buttons

	base[NORMAL]      	= "#222222" # Background, most
	base[PRELIGHT]    	= "#753030" # Mouseover menu
	base[ACTIVE]	    	= "#181818" # Menu active item in inactive window
	base[SELECTED]  	  = "#753030" # Menu active item in active window
	base[INSENSITIVE] 	= "#262626" # Background, insensitive

	text[NORMAL]	  	  = "#cccaca" # Text in window
	text[PRELIGHT]	    = "#dddada" # Text on Mouseover
	text[ACTIVE]	  	  = "#dddada" # Active text in inactive window
	text[SELECTED]    	= "#ffffff" # Active text in active window
	text[INSENSITIVE] 	= "#dddada" # Unknown


	engine "murrine"
	{
        animation           = TRUE
        colorize_scrollbar  = TRUE

        menustyle           = 0
        glazestyle          = 2
        glowstyle           = 1
        menubarstyle        = 2
        menubaritemstyle    = 1
        menuitemstyle       = 1
        listviewheaderstyle = 1
        listviewstyle       = 0
        lightborderstyle    = 1
        progressbarstyle    = 1
        separatorstyle      = 1
        textstyle           = 3
        sliderstyle         = 1

        contrast            = 1.25
        glow_shade          = 1.6
        highlight_shade     = 1.125
        text_shade          = 0.65
        lightborder_shade   = 1.35
        roundness           = 2
        gradient_colors     = { "#262626", "#222222", "#222222", "#222222" }
        trough_shades       = { 1.0, 1.2 }
	}
}

